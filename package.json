{
  "name": "claude-log-viewer",
  "version": "1.0.0",
  "description": "A sophisticated Vue 3 application for visualizing Claude Code conversation logs with advanced performance optimizations and comprehensive testing",
  "keywords": [
    "claude",
    "log-viewer",
    "vue3",
    "conversation-logs",
    "jsonl",
    "performance",
    "visualization",
    "three.js",
    "tailwindcss"
  ],
  "homepage": "https://github.com/zengwenliang416/Claude-Log-View#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zengwenliang416/Claude-Log-View.git"
  },
  "bugs": {
    "url": "https://github.com/zengwenliang416/Claude-Log-View/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Claude Log Viewer Team",
    "url": "https://github.com/zengwenliang416/Claude-Log-View"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "playwright test --grep @accessibility",
    "test:performance": "playwright test --grep @performance",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:performance-unit": "vitest run tests/performance",
    "test:critical": "vitest run tests/unit/components/MessageDisplay.test.js tests/unit/components/LogViewer.test.js tests/unit/composables/useMessageFiltering-default-state.test.js",
    "test:display": "vitest run tests/unit/components/MessageDisplay.test.js tests/integration/message-display-integration.test.js",
    "test:full-suite": "npm run test:unit && npm run test:integration && npm run test:performance-unit && npm run test:e2e",
    "test:96-quality": "node tests/test-execution-plan.js",
    "test:ui-enhancements": "vitest run tests/unit/components/FilterControls-ui-enhancements.test.js tests/unit/composables/useMessageFiltering-checkbox-state.test.js",
    "test:ui-integration": "vitest run tests/integration/filter-controls-integration.test.js",
    "test:ui-performance": "vitest run tests/performance/ui-performance.test.js",
    "test:ui-accessibility": "vitest run tests/accessibility/ui-accessibility.test.js",
    "test:ui-visual": "playwright test tests/visual-regression/ui-visual-tests.spec.js",
    "test:ui-e2e": "playwright test tests/e2e/ui-enhancements.spec.js",
    "test:ui-suite": "node tests/run-ui-enhancement-tests.js",
    "test:benchmark": "vitest run tests/performance/scrolling-performance.test.js --reporter=verbose"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/three": "^0.179.0",
    "@vueuse/core": "^13.6.0",
    "highlight.js": "^11.9.0",
    "lucide-vue-next": "^0.536.0",
    "marked": "^16.1.2",
    "radix-vue": "^1.9.17",
    "three": "^0.179.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^24.1.0",
    "jscpd": "^4.0.5",
    "playwright": "^1.44.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
